{
  "name": "gamecrafter-board-forge",
  "version": "1.0.1",
  "description": "Pure TypeScript library (ESM + CJS) managed by pnpm",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "cli:dev": "tsx src/cli/index.ts",
    "---": "===================================",
    "clean": "rimraf dist",
    "build": "tsup",
    "rebuild": "rimraf dist && tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "pack": "pnpm pack",
    "prepack": "pnpm rebuild",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "lint": "eslint --ext .ts src",
    "lint:fix": "eslint --ext .ts src --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "changeset": "changeset",
    "version:apply": "changeset version",
    "release:prep": "pnpm build && pnpm pack"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.6",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.0",
    "ts-node": "10.9.2",
    "tsup": "^8.5.0",
    "tsx": "^4.20.4",
    "typescript": "^5.9.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.8.1",
  "license": "MIT",
  "dependencies": {
    "commander": "^14.0.0",
    "zod": "^4.0.17"
  }
}
